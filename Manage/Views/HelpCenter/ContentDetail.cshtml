@{
    ViewBag.Title = "帮助中心 | 内容详情";
    var model = (IntFactoryEntity.HelpCenter.ContentEntity)ViewBag.model;
}
@section css{    
    <link href="/modules/css/helpcenter/helpcenter.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">    
        var model = ('@(Html.ToJSONString(model))');
        model = JSON.parse(model.replace(/&quot;/g, '"'));
        $("#remark").html(decodeURI(model.Detail));
    </script>
}
<div class="header-box">
    <a class="header-title left">内容详情</a>   
    <div class="add-type right"><a href="/HelpCenter/EditContent/@(model.ContentID)" class="btn">编辑内容</a></div>
</div>
<div class="content-body">
    <div class="">
        <ul class="table-add">
            <li>
                <span class="column-title">标题:</span>
                <label class="title">@(model.Title)</label>                
            </li>
            <li>
                <span class="column-title">分类:</span>  
                <label>@(model.TypeName)</label>                          
            </li>
             <li>
                <span class="column-title">分类模块:</span>  
                <label>@(model.ModuleType==1?"功能模块":model.ModuleType==2?"常见问题":"新手指引")</label>                          
            </li>                
            <li>
                <span class="column-title">排序:</span>
                <label class="sort">@(model.Sort)</label>                
            </li>
            <li>
                <span class="column-title">关键字:</span>
                <label class="keywords" >@(model.KeyWords)</label>                
            </li>            
            <li>
                <span class="column-title-template left">附件:</span>
                <ul id="cateGoryImages" class="category-img clear-after">
                    <li><img style="width:60px;height:60px;" src="@(model.MainImg==""?"/modules/images/img-noimg.png":model.MainImg)?imageView2/1/w/60/h/60" data-src="@(model.MainImg==""?"/modules/images/img-noimg.png":model.MainImg)"></li>
                </ul>
            </li>
            <li>
                @*<span class="column-title left">描述:</span>*@
                <div id="remark" style="line-height:normal;list-style-type:initial;"></div>                
            </li>
        </ul>
    </div>
</div>
