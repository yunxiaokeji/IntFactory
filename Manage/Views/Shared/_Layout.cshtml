<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="/modules/css/layout.css" rel="stylesheet" />
    <link href="/modules/css/default/detail.css" rel="stylesheet" />
    <link href="/modules/css/default/list.css" rel="stylesheet" />
    @RenderSection("css", false)
</head>

<body>
    @{
        IntFactoryEntity.Manage.M_Users CurrentUser = (IntFactoryEntity.Manage.M_Users)Session["Manager"];
        string controller =  Url.RequestContext.RouteData.Values["controller"].ToString().ToLower();
        string action = Url.RequestContext.RouteData.Values["action"].ToString().ToLower();
        var logo = "/modules/images/logo.png";
    }

    <header>
        <div class="logo left">
            <a href="/Home/Index"><img src="@logo" /></a>
        </div>
        <div class="left companyname long" title="智能工厂管理后台">
            智能工厂管理后台
        </div>
        <ul id="modulesMenu" class="menu left">
             <li class="left" BindController="home">
                    <a href="/home/index" >
                        <span class="name">首页</span>
                        <span class="cursor"></span>
                    </a> 
                </li>
                <li class="left" BindController="client">
                    <a href="/Client/index" >
                        <span class="name">客户端</span>
                        <span class="cursor"></span>
                    </a> 
                </li>
                <li class="left" BindController="products">
                    <a href="/Products/index" >
                        <span class="name">材料</span>
                        <span class="cursor"></span>
                    </a> 
                </li>
                <li class="left" BindController="report">
                    <a href="/Report/AgentActionReport" >
                        <span class="name">统计</span>
                        <span class="cursor"></span>
                    </a> 
                </li>
                <li class="left" BindController="system">
                    <a href="/System/Admin" >
                        <span class="name">系统</span>
                        <span class="cursor"></span>
                    </a> 
            </li>
        </ul>
        <div id="currentUser" class="currentuser right">
            <span>
                <img src="@(string.IsNullOrEmpty(CurrentUser.Avatar)?"/modules/images/defaultavatar.png":CurrentUser.Avatar)" class="avatar" />
            </span>
            <span class="username">
                @(CurrentUser.Name)
            </span>
            <span class="dropdown">
                <span class="dropdown-top"></span>
                <span class="dropdown-bottom"></span>
            </span>
        </div>
    </header>

    <div class="main-body">
        <nav> 
            <div class="controller" BindController="client">
                <div class="controller-box">
                    <div class="controller-name">
                        <span class="open left"></span>
                        <span class="name left">客户端管理</span>
                    </div>
                </div>

                <ul class="action-box">
                    <li class="action"  BindAction="index"><a href="/Client/index" >客户列表</a></li>
                    <li class="action " BindAction="orders"><a href="/Order/Orders" >客户订单</a></li>
                </ul>
            </div>
            <div class="controller" BindController="products">
                <div class="controller-box">
                    <div class="controller-name">
                        <span class="open left"></span>
                        <span class="name left">材料管理</span>
                    </div>
                </div>

                <ul class="action-box">
                    <li class="action " BindAction="unit"><a href="/Products/Unit" >单位管理</a></li>
                    <li class="action " BindAction="attr"><a href="/Products/Attr" >属性/规格</a></li>
                    <li class="action " BindAction="category"><a href="/Products/Category" >类别设置</a></li>
                    <li class="action " BindAction="products"><a href="/Products/Products" >材料审核</a></li>
                </ul>
            </div>


            <div class="controller" BindController="report">
                <div class="controller-box">
                    <div class="controller-name">
                        <span class="open left"></span>
                        <span class="name left">统计</span>
                    </div>
                </div>

                <ul class="action-box">
                     <li class="action " BindAction="agentactionreport"><a href="/Report/AgentActionReport" >客户行为统计</a></li>
                </ul>
            </div>

            <div class="controller select" BindController="system">
                 <div class="controller-box">
                    <div class="controller-name">
                        <span class="open left"></span>
                        <span class="name left">系统管理</span>

                    </div>
                </div>

                <ul class="action-box">
                    <li class="action " BindAction="index"><a href="/ModulesProduct/index" >收费设置</a></li>
                    <li class="action " BindAction="industrys"><a href="/Industry/Industrys" >行业设置</a></li>
                    <li class="action " BindAction="expresscompanys"><a href="/ExpressCompany/ExpressCompanys" >快递公司</a></li>
                    <li class="action " BindAction="feedbacks"><a href="/FeedBack/FeedBacks" >意见反馈</a></li>
                    <li class="action " BindAction="menu"><a href="/System/Menu" >菜单设置</a></li>
                    <li class="action " BindAction="roles"><a href="/System/Roles" >角色设置</a></li>
                </ul>

                <div class="controller-box">
                    <div class="controller-name">
                        <span class="open left"></span>
                        <span class="name left">用户管理</span>
                    </div>
                </div>

                <ul class="action-box">
                     <li class="action " BindAction="admin"><a href="/System/Admin" >管理员设置</a></li>
                </ul>
            </div>


        </nav>

        <div class="main-content">
            @RenderBody()
        </div>
    </div>


    @*点击头像展开下拉列表*@
    <div class="dropdown-userinfo hide">
        <div class="top-lump"></div>
        <ul class="items-list">
            <li class="item"><a href="/Home/Logout">安全退出</a></li>
        </ul>
    </div>

    <input type="hidden" value="@controller" id="page-controller" />
    <script src="/Scripts/jquery-1.11.1.js"></script>
    <script type="text/javascript" src="/Scripts/sea.js"></script>
    <script type="text/javascript" src="/Scripts/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/layout"], function (layout)
        {
            layout.init();
        });

        $(function ()
        {
            var controller = $("#page-controller").val();
            if (controller == "expresscompany" || controller == "industry" || controller == "feedback" || controller == "modulesproduct") {
                controller = "system";
            } else if (controller == "order") {
                controller = "client";
            }

            $("#modulesMenu li[BindController='" + controller + "']").addClass("select");
            $(".controller[BindController='" + controller + "']").show();
            $(".controller[BindController='" + controller + "'] .action-box li[BindAction='@action']").addClass("select");

            if (controller == 'home')
                $(".controller").show();

        });
    </script>

    @RenderSection("scripts", false)
</body>
</html>
