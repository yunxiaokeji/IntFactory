@{
    ViewBag.Title = "行业管理";
}

@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/system/industry"], function (Industry) {
            Industry.detailInit("@ViewBag.IndustryID");
        });
    </script>
}
<link href="/modules/css/clients.css" rel="stylesheet" />

<div class="header-box">
    <span class="header-title">添加公司行业</span>
    <a class="btn right" href="javascript:history.go(-1);">返回</a>
</div>

<div class="content-body mTop20">
    <ul class="contentnew" style="display:block;">
        <li>
            <span class="columnname">名称：</span>
            <span><input type="text" id="Name" class="verify"  maxlength="11"  data-empty="名称不能为空!" /></span>
        </li>
         <li>
            <span class="columnname">描述：</span>
            <span><textarea id="Description"></textarea></span>
        </li>
    </ul>

    <div class="mTop20">
        <input type="button" id="saveIndustry" class="btn" value="添加" />
    </div>
</div>
