@{
    ViewBag.Title = "我的任务";
    var colorList = (List<IntFactoryEntity.LableColorEntity>)ViewBag.list;
}
@section css{
    <link href="/modules/css/task.css" rel="stylesheet" />
    <link href="/modules/css/common/order-task-list.css" rel="stylesheet" />
    <link href="/modules/plug/daterangepicker/daterangepicker.css" rel="stylesheet" />
}
@section scripts{
    <script src="/modules/plug/laydate/laydate.js"></script>
    <script src="/Scripts/jquery-1.11.1.js"></script>
    <script src="/modules/plug/e-smart-zoom-jquery.min.js"></script>
    <script type="text/javascript">
       seajs.use(["scripts/task/list"], function (obj) {
           obj.init('@ViewBag.filterType', '@ViewBag.UserID', '@Html.ToJSONString(colorList)');
       });
    </script>
}
<div class="header-box">
    <span class="header-title left">@ViewBag.Title</span>
</div>
<div class="search-box">
    <div class="search-header">
        <ul class="search-tab search-stages">
            <li data-id="-1">全部 ( @(ViewBag.Normal+ViewBag.Complete+ViewBag.NoBegin) )</li>
            <li data-id="0"  class="hover">未接受 ( @(ViewBag.NoBegin) )</li>
            <li data-id="1">进行中 ( @(ViewBag.Normal) )</li>
            <li data-id="2">已完成 ( @(ViewBag.Complete) )</li>
        </ul>
        <ul class="search-tab-status search-warning">
            <li data-id="-1" class="item hover">全部</li>
            <li data-id="1" class="item">快到期</li>
            <li data-id="2" class="item">已超期</li>
        </ul>
    </div>
</div>

<div class="content-body pBottom50">
    <div class="search-body">
        <ul class="search-item search-ordertype">
            <li class="column-name">类型：</li>
            <li data-id="-1" class="item hover">全部</li>
            <li data-id="1" class="item">打样单</li>
            <li data-id="2" class="item">大货单</li>
        </ul>
                
        <ul class="search-item search-process">
            <li class="column-name">模块：</li>
            <li data-id="-1" class='item hover'>全部</li>
            <li data-id="1" class='item'>材料</li>
            <li data-id="2" class='item'>制版</li>
            <li data-id="3" class='item itemDH'>裁片/织机</li>
            <li data-id="4" class='item itemDH'>车缝/缝盘</li>
            <li data-id="5" class='item'>发货</li>
            <li data-id="6" class='item itemDY'>工价</li>
            <li data-id="0" class='item'>其他</li>
        </ul>
         <ul class="search-item search-prefinishstatus">
            <li class="column-name">上级任务：</li>
            <li data-id="-1" class="item hover">全部</li>
            <li data-id="0" class="item">未接收</li>
            <li data-id="1" class="item">进行中</li>
            <li data-id="2" class="item">已完成</li>
        </ul>
    </div>
    <div class="search-items">
        <div class="left mRight20" id="chooseBranch"></div>
        <div class="left">
            <input type="text" id="taskCreateTime" placeholder="创建日期"  class="ipt-date"  />
        </div>
        <div class="left">
            <input type="text" id="taskExpireTime" placeholder="到期日期"  class="ipt-date"  />
        </div>
        <div class="right searth-module" data-text="输入任务标题/任务编码/订单编码..." data-width="260"> </div>
    </div>
    <ul class="search-sort">
        <li>
            <span id="filterMark" class=""></span>
        </li>
        <li class="sort-item hover"  data-isasc="0" data-isactive="1" data-orderbycloumn="0">
            创建时间
            <span class="asc"></span>
            <span class="desc hover"></span>
        </li>
        <li class="sort-item"  data-isasc="0" data-isactive="0" data-orderbycloumn="2">
            标签
            <span class="asc"></span>
            <span class="desc"></span>
        </li>
        <li class="sort-item" data-isasc="1" data-isactive="0" data-orderbycloumn="1">
            到期时间
            <span class="asc"></span>
            <span class="desc"></span>
        </li>
       @* <li class="right task-tabtype">
            <i class="iconfont mRight5" data-type="list" title="列表">&#xe64c;</i>
            <i class="iconfont" data-type="card" title="卡片">&#xe64b;</i>
        </li>*@
    </ul>
    <div class="clear"></div>
    <table class="table-items-detail mTop20">
        <tr class="hide table-header">
            <td class="tLeft">款式</td>
            <td>任务</td>
            <td>上级任务</td>
            <td>到期日期</td>
        </tr>
    </table>
    <div id="pager" class="mTop10"></div>
</div>
<div class="enlarge-image-bgbox hide">
    <div class="close-enlarge-image iconfont">&#xe606;</div> 
    <span id="zoomInButton" class="zoom-botton iconfont mRight50">&#xe642;</span>
    <span id="zoomOutButton" class="zoom-botton iconfont">&#xe641;</span>
</div>

<div id="pageContent" class="enlarge-image-box hide">
    <div class="left-enlarge-image"></div>
    <div class="right-enlarge-image"></div>
    <div class="enlarge-image-item"></div>
</div>

