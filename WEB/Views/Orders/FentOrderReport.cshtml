@{
    var order = (IntFactoryEntity.OrderEntity)ViewBag.Model;
    var client = (IntFactoryEntity.Manage.Clients)ViewBag.Client;
    var list = (List<IntFactoryEntity.OrderCostEntity>)ViewBag.List;
    ViewBag.Title = "FentOrderReport";
    Layout = null;
}

<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="content-language" content="zh-CN" />
	<meta name="author" content="zuroke" />
	<title>样衣报告</title>
    <link href="/modules/css/default/layout.css" rel="stylesheet" />
    <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="/modules/css/default/FentOrderReport.css" rel="stylesheet" />
    <script src="/Scripts/jquery-1.11.1.js"></script>
    <script src="/Scripts/sea.js"></script>
    <script src="/Scripts/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/orders/fentorderreport"], function (obj) {
            obj.init('@order.Platemaking');
        });

    </script>
</head>
<body>
    <div class="titlename">@(client.CompanyName==""?"--":client.CompanyName)</div>
    <table style="margin-left:20%;margin-bottom:20px;">
        <tr>
            <td class="font20">报价单</td>
            <td class="font20">款式图</td>
        </tr>
        <tr>
            <td style="width:500px;">
                <table class="border">
                    <tr>
                        <td class="t l">客户:</td>
                        <td class="t customerName">
                            @(order.CustomerID==""?"--":order.Customer.Name)
                        </td>
                        <td class="t">版本:</td>
                        <td class="r t Sersion">1版</td>
                    </tr>                    
                    <tr>
                        <td class="l">款号:</td>
                        <td>@(order.IntGoodsCode==""?"--":order.IntGoodsCode)</td>
                        <td>品名:</td>
                        <td class="r">@(order.GoodsName==""?"--":order.GoodsName)</td>
                    </tr>
                    <tr>
                        <td class="l">制版:</td>
                        <td>@(order.Tasts.Find(m=>m.Mark==12).Owner.Name)</td>
                        <td>做样:</td>
                        <td class="r">袁银平</td>
                    </tr>
                    <tr>
                        <td class="l">时间:</td>
                        <td>@(order.PlanTime.ToString("yyyy-MM-dd"))</td>
                        <td>复核:</td>
                        <td class="r"></td>
                    </tr>
                    <tr>
                        <td colspan="2" class="b l">客户确认</td>
                        <td colspan="2" class="b r"></td>
                    </tr>
                </table>
            </td>
            <td>
                <img src="@(order.OrderImage)" />
            </td>
        </tr>
        <tr>
            <td class="font20">样衣尺寸</td>
            <td class="font20">成本核算</td>
        </tr>
        <tr>
            <td id="Platemak">
                
            </td>
            <td>
                <table class="border" style="height:100%">
                    <tr>
                        <td colspan="6" class="r t l font20" style="height:30px;">面/辅料</td>
                    </tr>
                    @if (order.Details.Count>0)
                    {
                        foreach (var item in order.Details)
                        {
                            <tr>
                                <td class="l b">@(item.ProductName)</td>                            
                                <td class="b">门幅:</td>
                                <td class="b">1.44</td>
                                <td class="b">用料:</td>
                                <td class="b">@(item.Quantity.ToString("f3"))</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="l b" colspan="2" style="width:250px;font-size:15px;">暂无材料！</td>
                            
                        </tr>
                    }
                                   
                     
                </table>
            </td>
        </tr>
        <tr>
            <td></td>
            <td colspan="6" class="font16 l">
                <span class="taskplate"> 成本/加工费</span>
                <table class="border" id="Processing">
                    @*<tr>
                        <td class=" l width125">加工费</td>
                        <td class="l r width125">@(order.CostPrice)</td>
                    </tr>*@
                    @foreach (var obj in list)
                    {
                        <tr>
                            <td class="l">@(obj.Remark)</td>
                            <td class="l r">@(obj.Price)</td>
                        </tr>
                    }  
                </table>
            </td>
                
        </tr>
        <tr>
            <td class=" font20" colspan="2">修改意见:</td>            
        </tr>
        <tr>
            <td colspan="2" style="height:200px;"></td>
        </tr>
    </table>
</body>
</html>



