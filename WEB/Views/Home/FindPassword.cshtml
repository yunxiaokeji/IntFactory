@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="UTF-8"/>
    <meta content="供应链管理，智能工厂，流程管理，服装可视化管理" name="keywords"/>
    <meta content="中国市场最通用的智能工厂服装可视化管理平台，供应链管理，功能强大，2016年开始运营" name="description"/>
    <meta content="width=device-width,initial-scale=1,maximum-scale=1" name="viewport"/>
    <meta content="telephone=no" name="format-detection" />
    <title>重置密码</title>
    <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="/modules/css/default/layout.css" rel="stylesheet" />
    <link href="/modules/css/home/register.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/modules/images/logo_login.png" />

    <script type="text/javascript" src="/Scripts/sea.js"></script>
    <script type="text/javascript" src="/Scripts/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/home/findpassword"], function (findpassword) {
            findpassword.init('@ViewBag.LoginUrl');
        });
    </script>
</head>
<body>
    <div class="register-body" >
        <div class="main">
            <div class="loginTitle">重置密码</div>
            <div class="login">
                <div class="registerErr hide"></div>
                <div class="loginbar">
                    <input class="input icoUserName" id="loginName" type="text" placeholder="手机号" value="" maxlength="25"/>
                     <div class="error-body">
                        <div class="error-lump"></div>
                        <div class="error-msg"></div>
                    </div>
                </div>
                <div class="loginbar" style="background-color:inherit">
                    <div class="left">
                        <input class="input icoMobileCode" id="code" style="background-color:#fff;" type="text"  placeholder="验证码" />
                    </div>
                    <input type="button" class="btnRegister right" id="btnSendMsg" value="获取验证码" style="width:100px;font-size:14px;"/>

                    <div class="clear"></div>
                     <div class="error-body" id="code-error">
                        <div class="error-lump"></div>
                        <div class="error-msg"></div>
                    </div>
                </div>
                <div class="loginbar">
                    <input class="input icoUserPwd" id="loginPWD" type="password" maxlength="25"/>
                     <div class="error-body">
                        <div class="error-lump"></div>
                        <div class="error-msg"></div>
                    </div>
                    <span class="txtBoxPassword" id="txtBoxPassword">密码,6-25位,必须含字母+数字</span>
                </div>
                <div class="loginbar">
                    <input class="input icoSurePwd" id="loginSurePWD" type="password" maxlength="25"/>
                     <div class="error-body">
                        <div class="error-lump"></div>
                        <div class="error-msg"></div>
                    </div>
                    <span class="txtBoxPassword" id="txtBoxSurePassword">确认密码</span>
                </div>
                <div class="btnRegister" id="btnUpdateUserPwd">重置</div>
                <div class="register-remember-box">
                    <div class="left color999">已有账号，<a href="@ViewBag.LoginUrl">登录</a></div>
                    <div class="cb-remember-password right">
                         <a href="@ViewBag.RegisterUrl">新用户注册</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
