@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="UTF-8">
    <meta content="供应链管理，智能工厂，流程管理，服装可视化管理" name="keywords">
    <meta content="中国市场最通用的智能工厂服装可视化管理平台，供应链管理，功能强大，2016年开始运营" name="description">
    <meta content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1" name="viewport">
    <meta content="telephone=no" name="format-detection">
    <title>注册智能工厂</title>
    <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="/modules/css/default/layout.css" rel="stylesheet" />
    <link href="/modules/css/home/register.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/modules/images/logo_login.png">

    <script src="/Scripts/sea.js"></script>
    <script src="/Scripts/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/home/register"], function (register) {
            register.init('@ViewBag.SuccessUrl');
        });
    </script>
</head>
<body>
    <div class="register-body" >
        <div class="main">
            <div class="loginTitle">欢迎注册厂盟</div>
            <div class="login">
                <div class="registerErr hide"></div>
                <div class="loginbar">
                    <input class="input icoUserName" id="loginName" type="text" placeholder="手机号" value="" maxlength="25"/>
                </div>
                <div class="loginbar">
                    <div class="left">
                        <input class="input icoMobileCode" id="code" type="text"  placeholder="验证码" />
                    </div>
                    <input type="button" class="btnRegister right" id="btnSendMsg" value="获取验证码" style="width:100px;font-size:14px;"/>
                    <div class="clear"></div>
                </div>
                 <div class="loginbar">
                    <input class="input icoUserCompany" id="companyName" type="text" placeholder="公司名称" value="" maxlength="25"/>
                </div>
                <div class="loginbar">
                    <input class="input icoName" type="text" id="name" placeholder="姓名" value="" maxlength="25"/>
                </div>
                <div class="loginbar relative">
                    <input class="input icoUserPwd" id="loginPWD" type="password" maxlength="25"/>
                    <span class="txtBoxPassword" id="txtBoxPassword">密码,6-25位,必须含字母+数字</span>
                </div>

                <div class="loginbar relative">
                    <input class="input icoSurePwd" id="loginSurePWD" type="password" maxlength="25"/>
                    <span class="txtBoxPassword" id="txtBoxSurePassword">确认密码</span>
                </div>

                <div class="btnRegister" id="btnRegister">注册</div>
                <div class="register-remember-box">
                    <div class="left color999">已有账号，<a href="@ViewBag.LoginUrl">登录</a></div>
                    <div class="cb-remember-password right">
                         注册即同意 <a href="/home/Terms" target="_target">《智能工厂协议》</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
