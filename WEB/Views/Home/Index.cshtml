@{
    
    Layout = "/Views/Shared/_LayoutNoLeft.cshtml";
    IntFactoryEntity.Users CurrentUser = (IntFactoryEntity.Users)Session["ClientManager"];
    ViewBag.Title = "首页";
}

@section css{
<link href="/modules/css/home/home.css" rel="stylesheet" />
<style type="text/css">
    .main-content { margin-left:0px; }
</style>
}


@section scripts{
<script type="text/javascript">
    seajs.use(["scripts/home"], function (layout) {
        layout.initHome();
    });
</script>
}
<div class="home-body">
   <div class="report-box">
       <div class="report-item">
           <div class="item-header bgactive">
               <div class="active-ico"></div>
               <h1>新增活动数</h1>
