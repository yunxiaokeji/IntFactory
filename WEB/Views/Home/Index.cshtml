@{
    ViewBag.Title = "首页";
    Layout = "/Views/Shared/_LayoutNoLeft.cshtml";
}
@section css{
    <link href="/modules/css/home/index.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
       seajs.use(["scripts/home/index"], function (obj) {
           obj.init('@ViewBag.Level', '@ViewBag.UserID');
       });
    </script>
}

<div class="index-report">
    <div class="index-report-header">
        <div class="left">
            <span class="font14 order-msg">订单</span>
            <span class="mLeft20">@(DateTime.Now.ToString("MM.dd"))—@(DateTime.Now.AddDays(14).ToString("MM.dd"))</span>
        </div>
        <div class="right order-type">
            <span class="hover" data-id="1">订单</span><span data-id="2">任务</span>
        </div>
        <div class="clear"></div>
    </div>

    <div class="index-report-sum">
        <div class="left">
            <ul class="sum-list">
                <li class="active" data-orderfilter="-1">
                    <div class="sun-count total" id="totalSumCount">0</div>
                    <div>全部<span class="order-msg" style="color:#888;">订单</span></div>
                </li>
                <li data-orderfilter="1">
                     <span class="sun-count exceed" id="totalExceedCount">0</span>
                    <div>已超期</div>
                </li>
                 <li data-orderfilter="2">
                     <div class="sun-count warn" id="totalWarnCount">0</div>
                    <div>快到期</div>
                </li>
                <li data-orderfilter="3">
                     <div class="sun-count work" id="totalWorkCount">0</div>
                    <div>进行中</div>
                </li>
                 <li data-orderfilter="4">
                     <div class="sun-count finish" id="totalFinishCount">0</div>
                    <div>已完成</div>
                </li>
            </ul>
            <div class="clear"></div>
        </div>
        <div class="right">
            <div class="right mRight15" id="orderType"></div>
            <div class="right mRight30 ordertotal"><span>需求订单总数:</span><span class="mLeft5 total-need" style="color:#666;">0</span></div>
            <div class="right mRight15 ordertotal"><span>超期订单总数:</span><span class="mLeft5 total-ecceed" style="color:#666;">0</span></div>
        </div>
        
