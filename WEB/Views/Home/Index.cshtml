@{
    ViewBag.Title = "首页";
    Layout = "/Views/Shared/_LayoutNoLeft.cshtml";
}
@section css{
    <link href="/modules/css/home/index.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
       seajs.use(["scripts/home/index"], function (obj) {
           obj.init();
       });
    </script>
}

<div class="index-report">
    <div class="index-report-header">
        <div class="left">
            <span class="font14">订单</span>
            <span class="mLeft20">@(DateTime.Now.Year+"年"+DateTime.Now.Month+"月")</span>
        </div>
        <div class="right order-type">
            <span class="hover">订单</span><span>任务</span>
        </div>
        <div class="clear"></div>
    </div>

    <div class="index-report-sum">
        <div class="left">
            <ul class="sum-list">
                <li class="active" data-orderfilter="-1">
                    <div class="sun-count" id="totalSumCount">0</div>
                    <div>全部订单</div>
                </li>
                <li data-orderfilter="1">
                     <div class="sun-count" id="totalWarnCount">0</div>
                    <div>快到期</div>
                </li>
                <li data-orderfilter="2">
                     <div class="sun-count" id="totalExceedCount">0</div>
                    <div>已到期</div>
                </li>
                <li data-orderfilter="3">
                     <div class="sun-count" id="totalWorkCount">0</div>
                    <div>进行中</div>
                </li>
                 <li data-orderfilter="4">
                     <div class="sun-count" id="totalFinishCount">0</div>
                    <div>已完成</div>
                </li>
            </ul>
            <div class="clear"></div>
        </div>

        <div class="right">
            <ul class="report-status">
                <li style="border-color:#f35353"><span>已到期</span></li>
                <li style="border-color:#ffa200"><span>快到期</span></li>
                <li style="border-color:#49b3f5"><span>进行中</span></li>
                <li style="border-color:#2F73B8"><span>已完成</span></li>
            </ul>
             <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>

    <div class="index-report-content">
        <div class="report-guid">
            <ul>
                <li><div class="guid-count">4</div></li>
                 <li><div class="guid-count">3</div></li>
                <li><div class="guid-count">2</div></li>
                <li><div class="guid-count">1</div></li>
                <li style="height:0px;"><div class="guid-count">0</div></li>
            </ul>
            <div class="clear"></div>
        </div>

       @* <div class="report-item">
            <ul>
                <li style="line-height:40px;" >40</li>
                <li style="line-height:30px;" class="item-finish">30</li>
                <li style="line-height:90px;" class="item-work">90</li>
                <li style="line-height:100px;" class="item-exceed">50</li>
            </ul>
            <div class="item-date">5月30日</div>
        </div>*@
    </div>
</div>

<div class="index-list">
    <div class="left order-list">
        <div class="list-header">
            <span>@(DateTime.Now.ToString("yyyy-MM-dd")+"/"+YXERP.Common.Common.Week("周",Convert.ToInt32(DateTime.Now.DayOfWeek)))</span>
            <span class="mLeft15 list-total">125</span>
        </div>
        <div class="order-layerbox mTop20">
            <div class="layer-lump"></div>

       </div>
    </div>
    <div class="left"></div>
    <div class="right"></div>
    <div class="clear"></div>
</div>