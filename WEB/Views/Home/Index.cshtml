@{
    ViewBag.Title = "首页";
    Layout = "/Views/Shared/_LayoutNoLeft.cshtml";
}
@section css{
    <link href="/modules/css/home/index.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
       seajs.use(["scripts/home/index"], function (obj) {
           obj.init('@ViewBag.orderLevel', '@ViewBag.roleLevel', '@ViewBag.RemainDay', '@ViewBag.RemainDate');
       });
    </script>
}

<div class="index-report">
    <div class="index-report-header">
        <div class="left">
            <span class="font14 report-title">我的订单</span>
        </div>

        <div class="left">
            <ul class="search-item mLeft20 mTop10" style="line-height:20px;">
                <li class="item" data-id="0">
                    @(DateTime.Now.AddDays(-15).ToString("MM.dd"))—@(DateTime.Now.AddDays(-1).ToString("MM.dd"))
                </li>
                <li class="item hover" data-id="1">
                    @(DateTime.Now.ToString("MM.dd"))—@(DateTime.Now.AddDays(14).ToString("MM.dd"))
                </li>
                <li class="item" data-id="2">
                    @(DateTime.Now.AddDays(15).ToString("MM.dd"))—@(DateTime.Now.AddDays(29).ToString("MM.dd"))
                </li>
            </ul>
        </div>
        <div class="right order-type">
            <span class="hover" data-id="1">订单</span><span data-id="2">任务</span>
        </div>
        <div class="clear"></div>
    </div>

    <div class="index-report-sum">
        <div class="left">
            <ul class="sum-list">
                <li class="active" data-orderfilter="-1">
                    <div class="sun-count total" id="totalSumCount">0</div>
                    <div><span class="report-total-title" style="color:#888;">全部订单</span></div>
                </li>
                <li data-orderfilter="1">
                     <span class="sun-count exceed" id="totalExceedCount">0</span>
                    <div>已超期</div>
                </li>
                 <li data-orderfilter="2">
                     <div class="sun-count warn" id="totalWarnCount">0</div>
                    <div>快到期</div>
                </li>
                <li data-orderfilter="3">
                     <div class="sun-count work" style="margin-left:0px;" id="totalWorkCount">0</div>
                    <div>正常</div>
                </li>
                 <li data-orderfilter="4">
                     <div class="sun-count finish" id="totalFinishCount">0</div>
                    <div>已完成</div>
                </li>
            </ul>
            <div class="clear"></div>
        </div>
        <div class="right">
            <div class="right mRight15" id="orderType"></div>
            <div class="right mRight30 ordertotal hand get-need" ><span>需求订单总数:</span><span class="mLeft5 total-need" style="color:#666;">0</span></div>
            <div class="right mRight15 ordertotal hand get-ecceed" style="background-color:#ffebeb;border:1px solid #fddddd ;" title="获取所有超期数据"><span>超期订单总数:</span><span class="mLeft5 total-ecceed" style="color:#666;">0</span></div>
        </div>
        <div class="clear"></div>
    </div>

    <div class="index-report-content">
        <div class="report-guid">
            <ul>
                <li><div class="guid-count">5</div></li>
                <li><div class="guid-count">4</div></li>
                 <li><div class="guid-count">3</div></li>
                <li><div class="guid-count">2</div></li>
                <li><div class="guid-count">1</div></li>
                <li style="height:0px;"><div class="guid-count">0</div></li>
            </ul>
            <div class="clear"></div>
        </div>
    </div>
</div>

<div class="index-list">
    <div class="order-list">
        <div class="list-header">
            <span class="list-title">需求单</span>
            <span class="mLeft15 list-total ">0</span>
            <span id="taskType" class="right hide"></span>
            <div class="clear"></div>
        </div>
        <div class="order-layerbox mTop20">
            <div class="layer-lump"></div>
       </div>
        <div class="center load-box hide">
            <span class="font14 hand load-more">加载更多</span>
        </div>
    </div>
</div>