@{
    ViewBag.Title = "销售漏斗";
}

<style type="text/css">
    .source-box { height:400px; }
</style>

@section scripts{
    <script src="/modules/plug/laydate/laydate.js"></script>
    <script type="text/javascript">
        $(function () {
            laydate({
                elem: '#beginTime',
                format: 'YYYY-MM-DD',
                min: '2000-01-01',
                max: laydate.now(),
                istime: false,
                istoday: false
            });
            laydate({
                elem: '#endTime',
                format: 'YYYY-MM-DD',
                min: '2000-01-01',
                max: laydate.now(),
                istime: false,
                istoday: true
            });
        })

        seajs.use(["scripts/salesrpt/opportunitystagerpt"], function (obj) {
            obj.init();
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">销售漏斗</span>
</div>
<div class="search-box">
    <div class="search-header">
        <ul class="search-tab search-type">
            <li data-type="1" data-id="chartRPT" class="hover">销售漏斗</li>
            <li data-type="2" data-id="teamRPT">按团队统计</li>
        </ul>
    </div>
</div>
<div class="content-body">
    <div class="search-body mBottom10">
        <div class="left" id="chooseBranch"></div>
        <div class="left hide" id="showType"></div>
        <div class="left lineHeight25 mLeft20">日期：</div>
        <input type="text" class="left" id="beginTime"/>
        <div class="left lineHeight25">&nbsp;-&nbsp;</div>
        <input  type="text" class="left" id="endTime"/>
        <div class="left btn mLeft20" id="btnSearch">查询</div>
    </div>
    <div id="chartRPT" class="source-box">

    </div>
    <div id="teamRPT" class="source-box">

    </div>
</div>

