@{
    
}
@section css{
    <link rel="stylesheet" href="/modules/css/shoppingcart/filterproducts.css" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/shoppingcart/filterproducts"], function (obj) {
            obj.init('@ViewBag.Type', '@ViewBag.GUID','@ViewBag.TID');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">@ViewBag.Title</span>
    @if (Convert.ToInt32(ViewBag.Type) == 11)
    {
        <a class="btn right mLeft20" href="/Task/Detail/@(ViewBag.TID)">返回任务详情</a>
        <a class="btn right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)&tid=@(ViewBag.TID)">添加材料</a>
    }
    else if (Convert.ToInt32(ViewBag.Type) == 1)
    {
        <a class="btn right mLeft20" href="/Products/ConfirmPurchase">返回采购单</a>
        <a class="btn right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)">添加材料</a>
    }
        else if (Convert.ToInt32(ViewBag.Type) == 3)
    {
        <a class="btn right mLeft20" href="/Stock/CreateDamaged">返回报损单</a>
        <a class="btn right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)">添加材料</a>
    }
    else if (Convert.ToInt32(ViewBag.Type) == 4)
    {
        <a class="btn right mLeft20" href="/Stock/CreateOverflow">返回报溢单</a>
        <a class="btn right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)">添加材料</a>
    }
    else
    {
        <a class="btn right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)">添加材料</a>
    }
   
</div>
<div class="content-body mTop20">
    <div class="top-div">
        <ul class="category-map">
            <li data-id=""><a href="javascript:void(0);">全部分类</a></li>
        </ul>
        <div class="right searth-module" data-text="输入产品编码/名称/助记码" data-width="300"> </div>
    </div>
    <div class="attr-filter">
        <ul class="category-child attr-item">
            <li class="attrkey">分类：</li>
            <li class="attrValues">
                <ul id="category-child">

                </ul>
            </li>
        </ul>
        <ul class="attr-item" id="attr-type">
            <li class="attrkey">类型：</li>
            <li class="attrValues">
                <ul>
                    <li class="hover type" data-id="-1">不限</li>
                    <li class="type" data-id="1">本厂</li>
                    <li class="type" data-id="2">共享</li>
                </ul>
            </li>
        </ul>
        <ul class="attr-item" id="attr-price">
            <li class="attrkey">价格：</li>
            <li class="attrValues">
                <ul>
                    <li class="hover price" data-begin="" data-end="">不限</li>
                    <li class="price" data-begin="0" data-end="49">0-49</li>
                    <li class="price" data-begin="50" data-end="99">50-99</li>
                    <li class="price" data-begin="100" data-end="199">100-199</li>
                    <li class="price" data-begin="200" data-end="499">200-499</li>
                    <li class="price" data-begin="500" data-end="999">500-999</li>
                    <li class="price" data-begin="1000" data-end="">1000以上</li>
                    <li>
                        <input type="text" id="beginprice" />&nbsp;-&nbsp;
                        <input type="text" id="endprice" />
                    </li>
                    <li class="search-btn">
                        <div class="btn" id="searchprice">搜索</div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <ul class="search-sort">
        <li>排序</li>
        <li class="sort-item hover" data-column="pd.CreateTime">
            日期
            <span class="asc"></span>
            <span class="desc hover"></span>
        </li>
        <li class="sort-item" data-column="pd.Price">
            价格
            <span class="asc"></span>
            <span class="desc"></span>
        </li>
    </ul>
    @*<div id="toppager" class="mTop20"></div>*@
</div>
<div class="content-body mTop20">
    <div class="clear">
        <ul class="productlist" id="productlist">

        </ul>
    </div>

    <div id="pager"></div>
</div>