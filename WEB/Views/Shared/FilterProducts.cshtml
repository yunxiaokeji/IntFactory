@{
    var version = YXERP.Common.Common.Version;
}
@section css{
    <link rel="stylesheet" href="/modules/css/shoppingcart/filterproducts.css" />
    <link href="/modules/css/iconfont/iconfont.css?v=@version" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/shoppingcart/filterproducts"], function (obj) {
            obj.init('@ViewBag.Type', '@ViewBag.GUID', '@ViewBag.TID', '@ViewBag.AID');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">@ViewBag.Title</span>
    @if (Convert.ToInt32(ViewBag.Type) == 11)
    {
        if (string.IsNullOrEmpty(ViewBag.TID))
        {
             <a class="btn-back right mLeft10" href="/Orders/OrderDetail/@(ViewBag.GUID)">返回订单详情</a>
        }
        else
        {
            <a class="btn-back right mLeft10" href="/Task/Detail/@(ViewBag.TID)">返回任务详情</a>
        }
        <span class="btn-add right mLeft10" id="btnQulicklyAddMaterial">快捷添加材料</span> 
        <a class="btn999 right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)&tid=@(ViewBag.TID)&aid=@(ViewBag.AID)">添加材料</a>
    }
    else if (Convert.ToInt32(ViewBag.Type) == 1)
    {
        <a class="btn-back right mLeft10" href="/Products/ConfirmPurchase">返回采购单</a>
        <span class="btn-add right mLeft10" id="btnQulicklyAddMaterial">快捷添加材料</span> 
        <a class="btn999 right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)">添加材料</a>
    }
    else if (Convert.ToInt32(ViewBag.Type) == 3)
    {
        <a class="btn-back right mLeft10" href="/Stock/CreateDamaged">返回消耗单</a>
        <span class="btn-add right mLeft10" id="btnQulicklyAddMaterial">快捷添加材料</span> 
        <a class="btn999 right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)">添加材料</a>
    }
    else if (Convert.ToInt32(ViewBag.Type) == 4)
    {
        <a class="btn-back right mLeft10" href="/Stock/CreateOverflow">返回报溢单</a>
        <span class="btn-add right mLeft10" id="btnQulicklyAddMaterial">快捷添加材料</span> 
        <a class="btn999 right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)">添加材料</a>
    }
    else
    {
        <span class="btn-add right mRight10" id="btnQulicklyAddMaterial">快捷添加材料</span>   
        <a class="btn999 right" href="/Products/ProductAdd?type=@(ViewBag.Type)&guid=@(ViewBag.GUID)">添加材料</a>
    }
</div>
<div class="content-body mTop20">
    <div class="top-div">
        <ul class="category-map">
            <li data-id=""><a href="javascript:void(0);">全部分类</a></li>
        </ul>
        <div class="right searth-module mRight10" data-text="输入产品编码/名称/助记码" data-width="300"> </div>
    </div>
    <div class="search-body">
        <ul class="category-child attr-item">
            <li class="attrkey">分类：</li>
            <li class="attrValues">
                <ul id="category-child">

                </ul>
            </li>
        </ul>
        <ul class="attr-item" id="attr-type">
            <li class="attrkey">类型：</li>
            <li class="attrValues">
                <ul>
                    <li class="hover type" data-id="-1">不限</li>
                    <li class="type" data-id="1">本厂</li>
                    <li class="type" data-id="2">共享</li>
                </ul>
            </li>
        </ul>
    </div>
    <ul class="search-sort">
        <li>排序</li>
        <li class="sort-item hover" data-column="pd.CreateTime">
            日期
            <span class="asc"></span>
            <span class="desc hover"></span>
        </li>
        <li class="sort-item" data-column="pd.Price">
            价格
            <span class="asc"></span>
            <span class="desc"></span>
        </li>
        <li style="padding-right:10px;">
            <input type="text" id="beginprice" />&nbsp;-&nbsp;
            <input type="text" id="endprice" />
        </li>
        <li class="search-btn" style="padding:0;margin-top:7px;">
            <div class="btn" id="searchprice">搜索</div>
        </li>
    </ul>
    @*<div id="toppager" class="mTop20"></div>*@
</div>
<div class="content-body mTop20">
    <div class="clear">
        <ul class="productlist" id="productlist">

        </ul>
    </div>

    <div id="pager"></div>
</div>