@{
    ViewBag.Title = "MarkColor";
}
@section css{   
    <link href="/modules/css/system/system.css" rel="stylesheet" />
    <link href="/modules/plug/choosecolor/spectrum.css" rel="stylesheet" />
}

@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/system/markcolor"], function (ObjectJS) {
            ObjectJS.init(@*'@ViewBag.Type', '@Html.ToJSONString(colorData)'*@); 
        });
    </script>
}
<div class="module-header mTop20">
    <ul class="module-tab left">
        <li class="hover left" data-id="customermark">
            <a href="javascript:void(0);">客户标签设置</a>
        </li>         
        <li class="left" data-id="ordermark">
            <a href="javascript:void(0);">订单标签设置</a>
        </li> 
        <li class="left" data-id="taskmark">
            <a href="javascript:void(0);">任务标签设置</a>
        </li>                
    </ul>    
</div>
<ul class="addmark">
    <li class="customermark" data-id="customermark-add">
        <div class="btn-add right mRight10" id="customermark-add" >新建标签</div>
    </li>
    <li class="ordermark hide" data-id="ordermark-add">
        <div class="btn-add right mRight10" id="ordermark-add" >新建标签</div>
    </li>
    <li class="taskmark hide" data-id="taskmark-add">
        <div class="btn-add right mRight10" id="taskmark-add" >新建标签</div>
    </li>  
</ul>
<div class="clear"></div>
<div class="markcolor">
    <ul class="color-list mTop5" id="customermark"> 
        <li>a</li>
    </ul>
    <ul class="color-list mTop5 hide" id="ordermark"> 
       <li>b</li>
    </ul>
    <ul class="color-list mTop5 hide" id="taskmark"> 
       <li>c</li>
    </ul>
</div>
<ul class="colordrop dropdown-ul hide"  style="width:65px;">
    <li  id="updateColor">编辑</li>
    <li  id="deleteColor">删除</li>
</ul>