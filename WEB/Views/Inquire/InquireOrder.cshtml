@{
    ViewBag.Title = "InquireOrder";
    Layout = null;
}

<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="content-language" content="zh-CN" />
	<meta name="author" content="zuroke" />
	<title>下单成功</title>
     <link href="/modules/css/default/layout.css" rel="stylesheet" />
     <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="/modules/css/inquireorder/common.css" rel="stylesheet" />    
    <link href="/modules/css/inquireorder/online-pay.css" rel="stylesheet" type="text/css" />
     <script src="../../Scripts/jquery-1.11.1.js"></script>
    <script src="../../Scripts/sea.js"></script>
    <script src="../../Scripts/sea-config.js"></script>
   
    <script src="../../modules/plug/doT.js"></script>
    <script type="text/javascript">        
        seajs.use("/modules/scripts/inquireorder/inquireorder", function (e) {
            e.init();
        });       
    </script>
</head>

<body style="background-color:#fff !important;">
<!--页头-->
<div class="pay-title pay-body row">
        
    <div class="pay-title-name l">
        <i><img src="/modules/images/Inquire/title-logo.png" alt=""/></i>
        <span>智能工厂</span>
    </div>
</div>
<!--页头end-->

<!--内容-->
<div class="pay-content pay-body row">
	<!---查询框--->
    <div class="inquire">
    	<div class="inquire-title">查询订单状态</div>
        
        <div class="inquire-form">
        	<ul>
            	<li>
                    <input type="text" class="inquire-form-phone" maxlength="11" placeholder="输入手机获取验证码" />
                </li>
                <li>
                    <input type="text" class="inquire-form-numb" maxlength="6" placeholder="输入验证码" />
                    <input type="button" class="inquire-form-btn" value="获取验证码" />
                </li>
                <li>
                	<input type="button" value="查询状态" disabled="disabled" class="inquire-form-button" />
                </li>
            </ul>
        </div>
    </div>
    <!---查询框end--->
    
    <!---订单状态信息--->
    <div class="info">
    	<div class="infobox row">
            <div class="info-order l">
                <ul>
                    <li class="row">
                        <i>订单号：</i>
                        <span>2020202020202020</span>
                    </li>
                    <li class="row">
                        <i>下单时间：</i>
                        <span>2016.03.02 23：20：11</span>
                    </li>
                    <li class="row">
                        <i>接单时间：</i>
                        <span>2016.03.04 09：13：45</span>
                    </li>
                    <li class="row">
                        <i>工厂信息：</i>
                        <span>智能工厂</span>
                    </li>
                </ul>
                <ul class="stage">
                    <li data-status="0">
                        <div class="abc"><div class="round completebg"></div></div>
                        <span class="complete">需求单</span>
                    </li>
                    <li data-status="1">
                        <div class="connect completecon"></div>
                    </li>
                    <li data-status="1">
                        <div class="abc" style="border:2px solid #007aff;margin-left:-6px;background-color:#fff;"><div class="round completebg"></div></div>
                        <span class="complete">打样</span>                        
                    </li>
                    <li data-status="2">
                        <div class="connect"></div>
                    </li>
                    <li  data-status="2">
                        <div class="abc"><div class="round"></div></div>
                        <span>合价</span>                        
                    </li>
                    <li data-status="3">
                        <div class="connect"></div>
                    </li>
                    <li data-status="3">
                        <div class="abc"><div class="round"></div></div>
                        <span>封样封价</span>
                    </li>
                </ul>
            </div>
            
            <div class="info-type r"></div>
        </div>
    </div>
    <!---订单状态信息end--->
    
    <!---订单状态信息 暂无--->
    <div class="info">
    	<div class="infobox row">
            <div class="info-none"></div>
        </div>
    </div>
    <!---订单状态信息 暂无end--->
    
</div>
<!--内容end-->

<!--页脚-->
<div class="pay-bottom pay-body row">
	<p>©2015-2016 智能工厂 沪ICP备15042543号</p>
</div>
<!--页脚end-->
</body>
</html>

