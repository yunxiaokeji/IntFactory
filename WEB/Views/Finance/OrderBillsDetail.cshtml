@{
    ViewBag.Title = "销售账单详情";
}
@section css{

}
@section scripts{
    <script src="/modules/plug/laydate/laydate.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/finance/orderdetail"], function (ObjectJS) {
            ObjectJS.init('@ViewBag.ID');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">销售账单详情</span>
    <a class="ico-back right" href="/Finance/ReceivableBills" >
        返回
    </a>
</div>
<div class="content-body mTop20">
    <div class="content-title">
        <div class="left titlename" id="infoBillingCode"></div>
    </div>
    <ul class="content-info">
        <li>
            <span class="column-title">应收金额：</span>
            <span class="column-value" id="infoTotalMoney"></span>
        </li>
        <li>
            <span class="column-title">订单编号：</span>
            <span class="column-value">
                <a href="/Orders/Detail" target="_blank" id="infoSourceCode"> </a>
            </span>
        </li>
        <li>
            <span class="column-title">已收金额：</span>
            <span class="column-value" id="infoPayMoney"></span>
        </li>
        <li>
            <span class="column-title">开票金额：</span>
            <span class="column-value" id="infoInvoiceMoney"></span>
        </li>
        <li>
            <span class="column-title">创建人：</span>
            <span class="column-value" id="infoCreateUser"></span>
        <li>
            <span class="column-title">创建时间：</span>
            <span class="column-value" id="infoCreateTime"></span>
        </li>
    </ul>
    <div class="tab-nav mTop30">
        <ul class="tab-nav-ul left">
            <li class="hover" data-id="navPays">收款记录</li>
            <li class="" data-id="navInvoices">开票记录</li>
        </ul>
        <div id="addPay" class="btn right @(ExpandClass.IsLimits(HttpContext.Current,"104010201"))">收款登记</div>
    </div>
    <table id="navPays" class="nav-partdiv table-list mTop20">
        <tr class="tr-header">
            <td class="width150 tLeft">收款日期</td>
            <td class="">类型</td>
            <td class="">收款金额</td>
            <td class="width100">支付方式</td>
            <td class="tLeft">备注</td>
            <td class="width150">登记人</td>
            <td class="width200 tRight">登记时间</td>
        </tr>
    </table>
    <table id="navInvoices" class="nav-partdiv table-list mTop20 hide">
       <tr class="tr-header">
            <td class="width100 tLeft">发票类型</td>
            <td class="width50">状态</td>
            <td class="">抬头</td>
            <td class="width100">开票金额</td>
            <td class="tLeft">邮寄地址</td>
            <td class="width100">收件人</td>
            <td class="width150">联系电话</td>
            <td class="tLeft">备注</td>
            <td class="width50">操作</td>
        </tr>
    </table>
</div>
<ul class="dropdown-ul hide" style="width:65px;">
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"104010202"))" id="auditInvoice">审核</li>
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"104010203"))" id="deleteInvoice">删除</li>
</ul>